        "##############################################################\n",
        "# Lab1 written by Fabian Aguilar Gomez\n",
        "# Purpose:\n",
        "#     The purpose of this program is to create an interative chatbot in which\n",
        "#     the user can input some text and the bot will reply with multiple options.\n",
        "#     The bot serves the purpose of creating a reservation at a restaurant for the user\n",
        "#     thus it terminates when a reservation has been created\n",
        "# Command Parameters:\n",
        "#      N/A\n",
        "# Input:\n",
        "#     The input is the standard input from the user\n",
        "# Results:\n",
        "#     The result is the bot responding and at the end creating a reservation\n",
        "# Returns:\n",
        "#     N/A\n",
        "# Notes:\n",
        "#   - The bot continues to ask the user questions until the reservation is completed\n",
        "################################################################\n",
        "#import library\n",
        "import random\n",
        "import string\n",
        "import sys\n",
        "#global exit from the bot\n",
        "exit = (\"I don't want a reservation\",\"I don't need a reservation\",\"I dont need a reservation\",\n",
        "            \"i dont need a reservation\", \"i don't need a reservation\", \"i dont need a reservation\",\n",
        "        \"no reservation\", \"nevermind\",\"i don't want to reserve\",\"exit\",\"cancel\",\"nothing\",\"see ya\",\"stay safe\",\n",
        "        \"goodbye\",\"good bye\",\"later\",\"done\",\"bye\")\n",
        "goodbye = ['Sorry to hear that! Have a great rest of your day!',\"Hope you reserve with us another time!\",\n",
        "           \"Call us again if you need to reserve!\", \"Hope to see you again!\", \"If you need us you know where to find us!\"]\n",
        "if __name__ == '__main__':\n",
        "    #Restaurant name and welcoming\n",
        "    repeat = 'Hello, welcome to the Future Burger restaurant.'\n",
        "    print(repeat)\n",
        "    #Welcome the human & check for a greeting\n",
        "    check = human_welcome(repeat)\n",
        "    if (check == 'exit'):\n",
        "        input()\n",
        "    else:\n",
        "        #Ask for the mood of the human\n",
        "        check = human_mood(check)\n",
        "        if (check == 'exit'):\n",
        "            input()\n",
        "        else:\n",
        "            #Ask for a reservation\n",
        "            check = human_reservation(check)\n",
        "            if (check == 'exit'):\n",
        "                input()\n",
        "            else:\n",
        "                #Confirm the reservation\n",
        "                check = human_confirmation(check)\n",
        "                if (check == 'exit'):\n",
        "                    input()\n",
        "                else:\n",
        "                    #Get a date for the reseravation\n",
        "                    confirmation_date =  human_date(check)\n",
        "                    if (confirmation_date == 'exit'):\n",
        "                        input()\n",
        "                    else:\n",
        "                        #Table size and farewell \n",
        "                        human_table(confirmation_date)\n",
        "                        input()\n",
        "#----------------------welcome----------------------------------------------\n",
        "#Purpose:\n",
        "#   The purpose of this function is to be able to \n",
        "#   check if the user typed a greeting to the bot\n",
        "# Parameters:\n",
        "#   String user_respone       A string that contains the user response \n",
        "# Returns:\n",
        "#    The function returns 'exit' if the person types that they don't want \n",
        "#    a reservation or it returns a random bot response\n",
        "#-----------------------------------------------------------------------------\n",
        "#Response from the user to the bot & bot responses\n",
        "user_grettings = (\"hello\",\"hi\",\"greetings\",\"hey\",\"howdy\")\n",
        "bot_response = [\"How are you feeling today?\", \"How are you today?\", \"Hi! How are you?\", \n",
        "                \"How are we feeling today?\", \"Hello! What is your mood today?\"]\n",
        "def welcome(user_response):\n",
        "    for word in user_response.split():\n",
        "        if word.lower() in exit:\n",
        "            return 'exit'\n",
        "        if word.lower() in user_grettings:\n",
        "            return random.choice(bot_response)\n",
        "#-------------------------------Mood-------------------------------------------------------------------\n",
        "#Purpose:\n",
        "#   The purpose of this function is to check the user response and check if we have a valid word\n",
        "#   in the response that belongs in either of the user_mood lists\n",
        "# Parameters:\n",
        "#   String user_response    A string that contains the user response\n",
        "# Returns:\n",
        "#   The function returns 'exit' if ther user does not want to make a reservation or it returns a \n",
        "#   random bot response based on the user's mood\n",
        "# Notes:\n",
        "#   We are checking two lists for mood since the user can feel down or happy\n",
        "#--------------------------------------------------------------------------------------------------------\n",
        "#Mood of user & bot responses\n",
        "user_mood_good = (\"happy\",\"joyful\",\"lucky\",\"cheerful\",\"good\")\n",
        "bot_good = [\"I'm glad so glad to hear that! \",\"That's great! \" ,\"Amazing news! \"]\n",
        "user_mood_bad = (\"sad\",\"bad\",\"down\",\"unlucky\",\"anxious\")\n",
        "bot_bad = [\"Aw sorry to hear that ... We all have those days \",\"I hope you feel better! \",\n",
        "                  \"The day is not over so we can turn it around! \", \"Eating always makes us feel better! \"]\n",
        "def mood(user_response):\n",
        "    for word in user_response.split():\n",
        "        if word.lower() in exit:\n",
        "            return 'exit'\n",
        "        if word.lower() in user_mood_good:\n",
        "            return random.choice(bot_good) + \" Do you already have a reservation?\"\n",
        "        if word.lower() in user_mood_bad:\n",
        "            return random.choice(bot_bad) + \" Do you already have a reservation?\"\n",
        "#------------------------------Reservation-------------------------------------------------\n",
        "#Purpose:\n",
        "#   The purpose of this function is to check if the keyword is in the sentence that the user\n",
        "#    has entered\n",
        "# Parameters:\n",
        "#   String user_response            A string which contains the user response\n",
        "# Returns:\n",
        "#    The function returns 'exit' if the user does not want a reservation otherwise it returns\n",
        "#     a random bot response based on the user input\n",
        "# Notes:\n",
        "#   We have to check two lists since the user can say either no or yes and return an\n",
        "#   appropriate response\n",
        "#----------------------------------------------------------------------------------------------\n",
        "#Reservation of the user options (yes or no) & bot responses\n",
        "user_reservation_no = (\"no\",\"nope\",\"i don't\", \"i dont\", \"i do not\",\"nah\")\n",
        "user_reservation_yes = (\"yes\", \"yeah\",\"yep\", \"i do\", \"i have one\")\n",
        "bot_reservation_no = [\"Would you like to make one now?\", \"Would you like to create one now?\", \"Would you like to establish one now?\",\n",
        "                              \"Would you like to form one now?\",\"Would you like to reserve now?\",\"Would you like to prepare one now?\"]\n",
        "bot_reservation_yes = [\"Do you want to create another one?\", \"Would you want to create another reservation?\",\"Is there another reservation you want to create?\"]\n",
        "def reservation(user_response):\n",
        "    for word in user_response.split():\n",
        "        if word in exit:\n",
        "            return 'exit'\n",
        "        if word.lower() in user_reservation_no:\n",
        "            return random.choice(bot_reservation_no)\n",
        "        if word.lower() in user_reservation_yes:\n",
        "            return random.choice(bot_reservation_yes)\n",
        "#------------------------------Reservation-------------------------------------------------\n",
        "#Purpose:\n",
        "#   Checks if we want to confirm a resevation or not\n",
        "# Parameters:\n",
        "#   String user_response            A string which contains the user response\n",
        "# Returns:\n",
        "#   The function returns 'exit' if the user does not want a reservation otherwise\n",
        "#   it returns a bot confirmation responed based on the user input\n",
        "# Notes:\n",
        "#   We have to check two lists since the user can say either no or yes and return an\n",
        "#   appropriate response. \n",
        "#   It can also exit the bot if the user says no since they would not want another \n",
        "#   reservation\n",
        "#----------------------------------------------------------------------------------------------\n",
        "#Reservation confirmation options (yes or no) & bot responses\n",
        "user_confirmation_yes = (\"yes\",\"yep\",\"yes please\",\"sure\",\"why not\",\"yeah\",\"yes i do\")\n",
        "user_confirmation_no = (\"no\",\"no thanks\",\"no thank you\",\"nah\",\"nope\",\"i don't\",\"i dont\")\n",
        "bot_confirmation_no = [\"Aw okay then! Have a nice day!\", \"Sorry I couldn't help you today!\", \"Okay then! Have a good day!\"\n",
        "                                      , \"Alright then! Have a great rest of your day!\"]\n",
        "bot_confirmation_yes = [\"When would you like to make the reservation?\", \"For when do you want the reservation?\",\n",
        "                                      \"For what date is this reservation for?\", \"For what day should I save the reservation for?\",\n",
        "                                        \"What day would you like to schedule the reservation for?\"]\n",
        "def confirmation(user_response):\n",
        "    for word in user_response.split():\n",
        "        if word.lower() in exit:\n",
        "            return 'exit'\n",
        "        if word.lower() in user_confirmation_no:\n",
        "            return 'exit'\n",
        "        if word.lower() in user_confirmation_yes:\n",
        "            return random.choice(bot_confirmation_yes)\n",
        "#------------------------------reservation_date------------------------------------------------\n",
        "#Purpose:\n",
        "#   Checks for a valid date to create the reservation\n",
        "# Parameters:\n",
        "#   String user_response            A string which contains the user response\n",
        "# Returns:\n",
        "#    The function returns 'exit' if the user does not want a reservation otherwise it returns\n",
        "#    a random bot response\n",
        "#----------------------------------------------------------------------------------------------\n",
        "#Possible dates for reservations \n",
        "#Bot responses to dates\n",
        "dates = (\"sunday\",\"monday\",\"tuesday\",\"wednesday\",\"thursday\",\"friday\",\"saturday\")\n",
        "bot_date = [\"Sure, I can help you with that. A table for how many people?\", \n",
        "                    \"For how many people will this reservation be for?\",\n",
        "                    \"How many people will be attending?\", \"For how many is the table for?\",\n",
        "                    \"How many people will this reservation have?\"]\n",
        "def reservation_date(user_response):\n",
        "    for word in user_response.split():\n",
        "        if word.lower() in exit:\n",
        "            return 'exit'\n",
        "        if word.lower() in dates:\n",
        "            return random.choice(bot_date)\n",
        "#------------------------------table_size-------------------------------------------------\n",
        "#Purpose:\n",
        "#   Checks for a valid number for the table size for the reservation\n",
        "# Parameters:\n",
        "#   String user_response            A string which contains the user response\n",
        "# Returns:\n",
        "#   The function returns a final bot response if the string contains a digit for the\n",
        "#   table size otherwise it returns 'exit'\n",
        "# Notes:\n",
        "#  The user can still cancel the reservation and the function will return 'exit'\n",
        "#----------------------------------------------------------------------------------------------\n",
        "def table_size(user_response):\n",
        "    finished= [\"It's all set! Have a good day!\", \"Okay!  . . . And . . . Done! It's all set!\", \n",
        "                     \"All set! Your reservation has been set!\", \"You are ready to go! All set!\",\n",
        "                     \"Your reservation has been created!\",\n",
        "                     \"Your reservation has been set!\"]\n",
        "    for word in user_response.split():\n",
        "        if word.lower() in exit:\n",
        "            return 'exit'\n",
        "        if word.lower().isdigit():\n",
        "            return random.choice(finished)\n",
        "#------------------------------human_welcome-------------------------------------------------\n",
        "#Purpose:\n",
        "#   Checks for the the user input and if it's not valid keep repeating the question until\n",
        "#   a valid input is entered\n",
        "# Parameters:\n",
        "#   String  repeat                                  The question to repeat for invalid input\n",
        "# Returns:\n",
        "#   A string which is the bot response otherwise it returns 'exit'\n",
        "# Notes:\n",
        "#   This function calls the function welcome to check the input for certain keywords\n",
        "#----------------------------------------------------------------------------------------------\n",
        "def human_welcome(repeat):\n",
        "    while True:\n",
        "        human = input().lower()\n",
        "        if (welcome(human) != None):\n",
        "            if (welcome(human) == 'exit'):\n",
        "                print(random.choice(goodbye))\n",
        "                return 'exit'\n",
        "            print(welcome(human))\n",
        "            return (welcome(human))\n",
        "        else:\n",
        "            print(repeat)\n",
        "#------------------------------human_mood-------------------------------------------------\n",
        "#Purpose:\n",
        "#   Checks for the the user input and if it's not valid keep repeating the question until\n",
        "#   a valid input is entered\n",
        "# Parameters:\n",
        "#   String  repeat                                  The question to repeat for invalid input\n",
        "# Returns:\n",
        "#   A string which is the bot response otherwise it returns 'exit'\n",
        "# Notes:\n",
        "#   This function calls the function mood to check the input for certain keywords\n",
        "#----------------------------------------------------------------------------------------------\n",
        "def human_mood(repeat):\n",
        "    while True:\n",
        "        human = input().lower()\n",
        "        if (mood(human) != None):\n",
        "            if (mood(human) == 'exit'):\n",
        "                print(random.choice(goodbye))\n",
        "                return 'exit'\n",
        "            print(mood(human))\n",
        "            return (mood(human))\n",
        "        else:\n",
        "            print(repeat)\n",
        "#------------------------------human_reservation-------------------------------------------------\n",
        "#Purpose:\n",
        "#   Checks for the the user input and if it's not valid keep repeating the question until\n",
        "#   a valid input is entered\n",
        "# Parameters:\n",
        "#   String  repeat                                  The question to repeat for invalid input\n",
        "# Returns:\n",
        "#   A string which is the bot response otherwise it returns 'exit'\n",
        "# Notes:\n",
        "#   This function calls the function reservation to check the input for certain keywords\n",
        "#----------------------------------------------------------------------------------------------\n",
        "def human_reservation(repeat):\n",
        "    while True:\n",
        "        human = input().lower()\n",
        "        if (reservation(human) != None):\n",
        "            if (reservation(human) == 'exit'):\n",
        "                print(random.choice(goodbye))\n",
        "                return 'exit'\n",
        "            print(reservation(human))\n",
        "            return (reservation(human))\n",
        "        else:\n",
        "            print(repeat)\n",
        "#------------------------------human_confirmation------------------------------------------------\n",
        "#Purpose:\n",
        "#   Checks for the the user input and if it's not valid keep repeating the question until\n",
        "#   a valid input is entered\n",
        "# Parameters:\n",
        "#   String  repeat                                  The question to repeat for invalid input\n",
        "# Returns:\n",
        "#   A string which is the bot response otherwise it returns 'exit'\n",
        "# Notes:\n",
        "#   This function calls the function confirmation to check the input for certain keywords\n",
        "#----------------------------------------------------------------------------------------------\n",
        "def human_confirmation(repeat):\n",
        "    while True:\n",
        "        human = input().lower()\n",
        "        if (confirmation(human) != None):\n",
        "            if (confirmation(human) == 'exit'):\n",
        "                print(random.choice(bot_confirmation_no))\n",
        "                return 'exit'\n",
        "            else:\n",
        "                print(confirmation(human))\n",
        "                return (confirmation (human))\n",
        "        else:\n",
        "            print(repeat)\n",
        "#------------------------------human_date-------------------------------------------------\n",
        "#Purpose:\n",
        "#   Checks for the the user input and if it's not valid keep repeating the question until\n",
        "#   a valid input is entered\n",
        "# Parameters:\n",
        "#   String  repeat                                  The question to repeat for invalid input\n",
        "# Returns:\n",
        "#   A string which is the bot response otherwise it returns 'exit'\n",
        "# Notes:\n",
        "#   This function calls the function reservation_date to check the input for certain keywords\n",
        "#----------------------------------------------------------------------------------------------\n",
        "def human_date(repeat):\n",
        "    while True:\n",
        "        human = input().lower()\n",
        "        if (reservation_date(human) != None):\n",
        "            if (reservation_date(human) == 'exit'):\n",
        "                print(random.choice(goodbye))\n",
        "                input()\n",
        "                return 'exit'\n",
        "            print(reservation_date(human))\n",
        "            return (reservation_date(human))\n",
        "        else:\n",
        "            print(repeat)\n",
        "#------------------------------human_table-------------------------------------------------\n",
        "#Purpose:\n",
        "#   Checks for the the user input and if it's not valid keep repeating the question until\n",
        "#   a valid input is entered\n",
        "# Parameters:\n",
        "#   String  repeat                                  The question to repeat for invalid input\n",
        "# Returns:\n",
        "#   A string which is the bot response otherwise it returns 'exit'\n",
        "# Notes:\n",
        "#   This function calls the function table_size to check the input for certain keywords\n",
        "#----------------------------------------------------------------------------------------------\n",
        "def human_table(repeat):\n",
        "    while True:\n",
        "        human = input().lower()\n",
        "        if (table_size(human) != None):\n",
        "            if (table_size(human) == 'exit'):\n",
        "                print(random.choice(goodbye))\n",
        "                return 'exit'\n",
        "            print(table_size(human))\n",
        "            return (table_size(human))\n",
        "        else:\n",
        "            print(repeat)"
